[
    {
        "name": "Remove Gnome Bloat",
        "description": "Uninstalls useless Gnome applications such as Gnome Clocks",
        "default_state": true,
        "category": "system",
        "actions": [
            {
                "operation_type": "package_remove",
                "operation_args": [
                    "gnome-boxes",
                    "gnome-calendar",
                    "gnome-characters",
                    "gnome-clocks",
                    "gnome-contacts",
                    "gnome-extensions-app",
                    "gnome-logs",
                    "gnome-maps",
                    "gnome-music",
                    "gnome-photos",
                    "gnome-tour",
                    "gnome-weather",
                    "rhythmbox",
                    "snapshot",
                    "totem"
                ]
            }
        ]
    },
    {
        "name": "Remove LibreOffice",
        "description": "Uninstalls LibreOffice",
        "documentation_link": "[View on Fedora Packages](https://packages.fedoraproject.org/pkgs/libreoffice/libreoffice)",
        "default_state": true,
        "category": "system",
        "actions": [
            {
                "operation_type": "package_remove",
                "operation_args": [
                    "libreoffice*"
                ]
            }
        ]
    }
]